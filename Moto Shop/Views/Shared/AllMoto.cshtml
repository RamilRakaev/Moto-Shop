@model Motorcycle

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.Image" alt="@Model.Image" />
    <h2>@Model.Name</h2>
    <p>@Model.ShortDesc</p>
    <h2>Модель: @Model.Name</h2>
    <p>Цена: @Model.Price.ToString("c")</p>
    <p><a class="btn btn-warning" asp-controller="ShopBasket" asp-action="AddToBasket" asp-route-id="@Model.Id">Добавить в корзину</a></p>
</div>

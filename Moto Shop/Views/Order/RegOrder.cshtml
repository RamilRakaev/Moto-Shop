
@{ Order order = new Order();}
<h3 class="text-left">Оформление заказа</h3>
<div class="row">
    <form asp-controller="Order" asp-action="RegOrder" method="post"  class="form-horizontal">
        <div class="form-group">
            <label asp-for="@order.Name"></label>
            <div class="col-md-12">
                <input type="text" asp-for="@order.Name" class="form-control"/>
                <span asp-validation-for="@order.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@order.Surname"></label>
            <div class="col-md-12">
                <input asp-for="@order.Surname" class="form-control" />
                <span asp-validation-for="@order.Surname" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@order.DeliveryAdress"></label>
            <div class="col-md-12">
                <input asp-for="@order.DeliveryAdress" class="form-control" />
                <span asp-validation-for="@order.DeliveryAdress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@order.EmailAdress"></label>
            <div class="col-md-12">
                <input asp-for="@order.EmailAdress" class="form-control" />
                <span asp-validation-for="@order.EmailAdress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@order.Delivery"></label>
            <div class="col-md-12">
                <input asp-for="@order.Delivery" class="form-control" />
                <span asp-validation-for="@order.Delivery" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@order.DeliveryAdress"></label>
            <div class="col-md-12">
                <input asp-for="@order.Number" class="form-control" />
                <span asp-validation-for="@order.Number" class="text-danger"></span>
            </div>
        </div>
            <input class="btn btn-success" type="submit" value="Заказать" />
    </form>
</div>